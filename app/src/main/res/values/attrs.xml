<resources>

    <declare-styleable name="ProgressButton">
        <attr name="background_default_color" format="color" />
        <attr name="background_selector_color" format="color" />
        <attr name="background_line_width" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_default_color" format="color" />
        <attr name="text_selector_color" format="color" />
        <attr name="text_paint_width" format="float" />
        <attr name="background_is_line">
            <enum name="yes" value="1" />
            <enum name="no" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="chart">
        <attr name="background_color" format="color" /><!-- 底色 -->
        <attr name="line_color" format="color" /><!-- 曲线的颜色 -->
        <attr name="form_color" format="color" /><!-- 底下表格线的颜色 -->
        <attr name="linear_gradient_color_top" format="color" /><!-- 曲线底色渐变的颜色 -->
        <attr name="linear_gradient_color_bottom" format="color" /><!-- 曲线底色渐变的颜色 -->
        <attr name="spot_color" format="color" /><!-- 圆点的颜色 -->
        <attr name="text_color" format="color" /><!-- 文字的颜色 -->
        <attr name="scale_text_size" format="dimension" /><!-- 刻度上的文本字号 -->
        <attr name="is_show_line" format="boolean" /><!-- 是否显示曲线线 -->
        <attr name="is_left" format="boolean" /><!-- 是否是左边开始 -->
        <attr name="is_show_gradual_background" format="boolean" /><!-- 是否显示渐变底色 -->
        <attr name="is_compel_can_scroll" format="boolean" /><!-- 是否可以滚动 -->
        <attr name="is_show_anim" format="boolean" /><!-- 是否动画开始展示 -->
        <attr name="is_show_spot_to_bottom_line" format="boolean" /><!-- 点到底的竖线是否显示 -->
        <attr name="is_show_spot" format="boolean" /><!-- 点是否显示 -->
        <attr name="spot_radius" format="dimension" /><!-- 圆点的半径 -->
        <attr name="column_width" format="dimension" /><!-- 圆柱的宽度 -->
        <attr name="columu_margin" format="dimension" /><!-- 圆柱使用的边距 -->
        <attr name="anim_time" format="integer" /><!-- 动画的时间，毫秒 -->
        <attr name="chart_type"><!-- 图标类型 -->
            <enum name="CHART_LINE" value="0" /><!-- 线 -->
            <enum name="CHART_BEZIER_CURVE" value="1" /><!-- 曲线 -->
            <enum name="CHART_COLUMN" value="2" /><!-- 圆柱 -->
        </attr>

    </declare-styleable>

    <declare-styleable name="pancake">
        <attr name="pancake_background_color" format="color" /><!-- 底色 -->
        <attr name="pancake_text_color" format="color" /><!-- 字的颜色 -->
        <attr name="pancake_line_color" format="color" /><!-- 圆和字链接线的颜色 -->
        <attr name="pancake_is_show_split_line" format="boolean" /><!-- 是否显示分割线 -->
        <attr name="pancake_is_show_line" format="boolean" /><!-- 是否显示字和圆的连接线线 -->
        <attr name="pancake_is_start_anim" format="boolean" /><!-- 是否是以动画的形式开始展示 -->
        <attr name="pancake_is_show_small_circular" format="boolean" /><!-- 是否显示中心小圆 -->
        <attr name="pancake_animator_duration" format="integer" /><!-- 动画市场时长 -->

    </declare-styleable>

    <declare-styleable name="handicap">
        <attr name="text_margin_left" format="dimension" /><!-- 左边文本距离左边的宽度 -->
        <attr name="text_margin_right" format="dimension" /><!-- 右边边文本距离右边的宽度 -->
        <attr name="text_left_size" format="dimension" /><!-- 左边文本的大小 -->
        <attr name="text_right_size" format="dimension" /><!-- 右边文本的大小 -->
        <attr name="split_line_height" format="dimension" /><!-- 分割线的高度 -->

        <attr name="is_left_handicap" format="boolean" /><!-- true：0在左边，否则0在右边 -->
        <attr name="item_total" format="integer" /><!-- 一共有几个条目，默认是五个 -->
        <attr name="item_default_num" format="integer" /><!-- 没有数据时，默认显示的数据，int类型，1-100 -->

        <attr name="item_color" format="color" /><!-- 条目的颜色 -->
        <attr name="text_left_color" format="color" /><!-- 左边文本的颜色 -->
        <attr name="text_right_color" format="color" /><!-- 右边文本的颜色 -->
        <attr name="split_line_color" format="color" /><!-- 分割线的颜色 -->

        <attr name="default_str" format="string" /><!-- 默认的文本 -->

    </declare-styleable>
</resources>
