<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:gravity="center"
    android:orientation="vertical">

    <com.ntrade.demo.view.progress_button.ProgressButton
        android:id="@+id/test_view"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:background_default_color="@color/color_blue"
        app:background_is_line="yes"
        app:background_selector_color="@color/color_green1"
        app:radius="1dp"
        app:text_default_color="@color/color_green1"
        app:text_selector_color="@color/color_white"
        app:text_size="43sp" />

    <TextView
        android:id="@+id/test_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="33sp" />

    <Button
        android:id="@+id/test_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="开始"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_background_blue" />

    <Button
        android:id="@+id/test_btn_stop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="设置文本"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_background_blue" />
    <Button
        android:id="@+id/test_btn_background"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="设置底色"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_background_blue" />
</LinearLayout>